<h1>Listing all baskets</h1>

<table>

  <% @baskets.each do |basket| %>
  <tr>
    <tr>
      <th>Name</th>
    </tr>
    <td><%= basket.name %></td>
    <tr><td><br></td></tr>
    <tr> <th> Owner </th> </tr>
    <td><%= User.find(basket.owner_id).first_name %></td>
    <tr><td><br></td></tr>
    <tr>
      <tr> <th> Members </th> </tr>
    </tr>

    <% @shoppers = basket.users %>
    <% if @shoppers.empty? %>
      <td> <%= "No members" %> </td>
    <% end %>
    <% @shoppers.each do |shopper| %>
      <% if basket.owner_id == shopper.id %>

      <% else %>
        <tr>
          <td><%= shopper.first_name %></td>
        </tr>
      <% end %>
    <% end %>

    <tr><td><br></td></tr>
    <td>
      <%= link_to 'Add to Basket', add_item_path(basket: basket, item: @item, current_user: current_user), :method => :post, :class => "btn btn-sx btn-success" %>
    </td>
    <tr><td><hr></td></tr>
  </tr>
  <% end %>
</table>
