<% cache [I18n.locale, current_pricing_options, @product] do %>
  <div data-hook="product_show" id = "product_show" itemscope itemtype="http://schema.org/Product">
    <% @body_id = 'product-details' %>
    <div class="container">
      <div class="col-md-6 mb-4 product_image" data-hook="product_left_part">
        <!-- <div class="row" data-hook="product_left_part_wrap"> -->

          <!-- <div id="product-images" data-hook="product_images"> -->
            <div id="main-image" data-hook>
              <%= render partial: 'image' %>
            </div>
            <div id="thumbnails-wrapper thumbnails-slider--active" data-hook>
                <%= render partial: 'thumbnails' %>
            </div>
          <!-- </div> -->

          <!-- <div data-hook="product_properties">
            <= render partial: 'properties' %>
          </div>

          <div data-hook="promotions">
            <= render partial: 'promotions' %>
          </div> -->

        <!-- </div> -->
      </div>

      <div class="col-md-6 mb-4 product_inf" data-hook="product_right_part">
        <div class="row" data-hook="product_right_part_wrap">

          <div id="product-description" data-hook="product_description">

            <h6 class="product-brand" itemprop="name"><%= @product.meta_title %></h2>
            <h4 class="product-title" itemprop="name"><%= @product.name %></h1>


            <div id="cart-form" data-hook="cart_form">
              <%= render partial: 'cart_form' %>
            </div>

            <div itemprop="description" data-hook="description">
              <%= product_description(@product) rescue t('spree.product_has_no_description') %>
            </div>

          </div>

          <%= render partial: 'taxons' %>

        </div>
      </div>
    </div>
  </div>
<% end %>


<script>

function myFunction(imgs) {
  var expandImg = document.getElementById("expandedImg");
  expandImg.srcset = imgs.src;
  expandImg.src = imgs.src;
  expandImg.parentElement.style.display = "block";
}
</script>

<script>
$('#expandedImg').imagezoomsl();
</script>
